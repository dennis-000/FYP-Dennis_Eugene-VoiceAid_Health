modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VoiceAid Web"

[[workflows.workflow]]
name = "VoiceAid Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd VoiceAid_Health && npm run web"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["bash", "-c", "cd VoiceAid_Health && npx expo export --platform web"]
publicDir = "VoiceAid_Health/dist"
